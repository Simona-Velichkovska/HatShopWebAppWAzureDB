@page "{id:Guid}"
@model HatShopWebAppWAzureDB.Pages.Admin.Hats.EditModel
@{
}

<div class="container">
    <h1 class="mb-5">Edit Hat</h1>
</div>


@if (Model.Hat != null)
{
    <div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Hat.Id" readonly>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="name" asp-for="Hat.Name">
            </div>
            <div class="mb-3">
                <label for="desc" class="form-label">Product Description</label>
                <textarea class="form-control" id="desc" rows="2" asp-for="Hat.Description"></textarea>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="color">Color</label>
                <select class="form-select" id="color" asp-for="Hat.Color">
                    <option selected>Choose...</option>
                    <option value="black">Black</option>
                    <option value="white">White</option>
                    <option value="red">Red</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" for="size">Size</label>
                <select class="form-select" id="size" asp-for="Hat.Size">
                    <option selected>Choose...</option>
                    <option value="s">S</option>
                    <option value="m">M</option>
                    <option value="l">L</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="brand" class="form-label">Brand</label>
                <input type="text" class="form-control" id="brand" asp-for="Hat.Brand">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label><br />
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" asp-for="Hat.Price" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-text">.00</span>
                </div>
            </div>

            <div class="col-auto input-group mb-3">
                <label for="quantity" class="input-group-text">Quantity</label>
                <input type="number" class="form-control" id="quantity" asp-for="Hat.Quantity">
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="inStock" asp-for="Hat.InStock">
                <label class="form-check-label" for="inStock">In stock</label>
            </div>

            <div class="mb-3">
                <label for="featuredImg" class="form-label">Featured Image URL</label>
                <input type="text" class="form-control" id="featuredImg" rows="2" asp-for="Hat.FeaturedImageUrl">
            </div>
            <div class="mb-3">
                <label for="urlHandle" class="form-label">URL Handle</label>
                <input type="text" class="form-control" id="urlHandle" rows="2" asp-for="Hat.UrlHandle">
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="visible" asp-for="Hat.Visible">
                <label class="form-check-label" for="visible">Show to buyers</label>
            </div>
            <div class="mb-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary" asp-page-handler="Edit">Update Product</button>
                <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Delete</button>
            </div>
        </form>

    </div>
</div>
}else{
    <div class="container">
        <p>Hat not found!</p>
    </div>
}